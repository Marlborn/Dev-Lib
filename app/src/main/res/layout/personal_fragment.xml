<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/viewpager_2"
              android:orientation="vertical"
    >

    <EditText
        android:id="@+id/usercounty"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_goto"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:alpha="0.5"
        android:background="#000"
        android:hint="国家"
        android:padding="12dp"
        android:textColor="#FFF"
        android:textSize="16sp"/>
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_goto"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:alpha="0.5"
        android:background="#000"
        android:hint="姓名"
        android:padding="12dp"
        android:textColor="#FFF"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_goto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:alpha="0.5"
        android:background="#000"
        android:padding="12dp"
        android:text="数据保存(数据库)"
        android:textColor="#FFF"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/showdata_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:alpha="0.5"
        android:background="#000"
        android:padding="12dp"
        android:text="数据显示(数据库)"
        android:textColor="#FFF"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/deletedata_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:alpha="0.5"
        android:background="#000"
        android:padding="12dp"
        android:text="数据删除(数据库)"
        android:textColor="#FFF"
        android:textSize="16sp"/>
</LinearLayout>